<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction History</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Transaction History</h2>

        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(function(transaction) { %>
                <tr>
                    <td><%= transaction.type %></td>
                    <td><%= transaction.category %></td>
                    <td><%= transaction.description %></td>
                    <td>$<%= transaction.amount.toFixed(2) %></td>
                    <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                    <td>
                        <a href="/update/<%= transaction._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/delete/<%= transaction._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this transaction?');">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/add" class="btn btn-success mt-3">Add New Transaction</a>
    </div>
</body>
</html>
