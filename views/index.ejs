<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Transaction History</title>
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3">Transaction History</h1>
      <a href="/add" class="btn btn-primary btn-lg">Add Transaction</a>
    </div>
    <div class="card">
      <div class="card-body">
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th>Type</th>
              <th>Category</th>
              <th>Amount</th>
              <th>Description</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% transactions.forEach(transaction => { %>
              <tr>
                <td><%= transaction.type %></td>
                <td><%= transaction.category %></td>
                <td>$<%= transaction.amount.toFixed(2) %></td>
                <td><%= transaction.description %></td>
                <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                <td>
                  <a href="/edit/<%= transaction._id %>" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/delete/<%= transaction._id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
